<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.minutestool.MainActivity" >

    <TextView
        android:id="@+id/H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Horas   : Minutos"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/H"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint=":"
        android:textColorHint="#ffffff"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/separator"
        android:layout_toRightOf="@+id/separator"
        android:ems="3"
        android:hint="00"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#2F4F4F"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/minutes"
        android:layout_alignBottom="@+id/minutes"
        android:layout_toLeftOf="@+id/minutes"
        android:ems="3"
        android:hint="00"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#2F4F4F"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/H"
        android:layout_alignTop="@+id/total"
        android:text="TOTAL:"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/separator"
        android:layout_marginTop="26dp"
        android:ems="5"
        android:hint="000000"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#2F4F4F"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>